package com.interview_questionsandconcept.patterns;

public class BorderNumber {
	public static void main(String[] args) {
		print(4);
	}

	public static void print(int row) {
//		int num = 1;
		for (int i = 0; i < row; i++) {
			for (int j = 1; j <= row; j++) {
				if (i > j) {
					System.out.print(j + " ");
				}
			}
//			num = 1;
			System.out.println();
		}
	}
}
